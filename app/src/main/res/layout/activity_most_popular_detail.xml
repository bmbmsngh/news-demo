<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/xImageViewTop"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/xTextViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.Details.Title"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/xTextViewBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:gravity="center_vertical"
            android:textAppearance="@style/TextAppearance.Category"
            android:textColor="@android:color/darker_gray"
            tools:text="@tools:sample/full_names" />

        <TextView
            android:id="@+id/xTextViewDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="@dimen/spacing_normal"
            android:layout_marginEnd="@dimen/spacing_normal"
            android:drawableLeft="@drawable/ic_today"
            android:drawablePadding="@dimen/spacing_micro"
            android:gravity="left"
            android:maxLines="1"
            android:textAppearance="@style/TextAppearance.Details.Date"
            tools:text="@tools:sample/date/ddmmyy" />


        <TextView
            android:id="@+id/xTextViewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginTop="@dimen/spacing_normal"
            android:layout_marginRight="@dimen/spacing_normal"
            android:layout_marginBottom="0dp"
            android:lineSpacingExtra="4sp"
            android:textAppearance="@style/TextAppearance.Details.Text"
            tools:text="@tools:sample/lorem/random" />

        <TextView
            android:id="@+id/xTextViewReadMore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_normal"
            android:autoLink="web"
            android:lineSpacingExtra="4sp"
            android:linksClickable="true"
            android:text="@string/read_more"
            android:textAppearance="@style/TextAppearance.Details.Text"
            android:textStyle="bold"
            tools:text="@tools:sample/lorem" />

    </LinearLayout>
</ScrollView>